#include <iostream>
using namespace std;
class BankSys{
    float balance=0.0;
    int transactions=0;
    
    public:
        void view_balance(){
            cout<<"Your current balance is Rs."<<balance<<endl;
        }
        
        void deposit(float amount){
            if(amount>0){
                balance+=amount;
                transactions+=1;
                cout<<"Rs."<<amount<<" have been deposited to your account"<<endl;
            }
            else{
                cout<<"Enter a valid amount"<<endl;
                return;
            }
        }
         void withdraw(float amount){
            if(amount<0 || amount>balance){
                cout<<"Enter a valid amount"<<endl;
                return;
            }
            else{
               balance-=amount;
                transactions+=1;
                cout<<"Rs."<<amount<<" have been deducted from your account"<<endl;
            }
        }
        
        void get_transactions(){
            cout<<"The number transactions happened uptil now are "<<transactions<<endl;
        }
        
        void get_interest(){
            float amount=balance*0.05*5;
            cout<<"The interest earned for 5 years on your balance is Rs."<<balance<<endl;
        }
        
        int quit(){
            return 0;
        }
        
        
};

void menu(){
    cout<<"______________________"<<endl;
    cout<<"1.Display balance"<<endl;
    cout<<"2.Deposit"<<endl;
    cout<<"3.Withdrawal"<<endl;
    cout<<"4.Get transaction number"<<endl;
    cout<<"5.Interest earned in 5 years"<<endl;
    cout<<"6.Exit the program"<<endl;
    cout<<"______________________"<<endl;
    }
int main() {
BankSys b1;
menu();
b1.deposit(6666.78);
b1.view_balance();
b1.withdraw(908.00);
b1.get_transactions();
b1.quit();

return 0;
}
